generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id          Int      @id @default(autoincrement())
  title       String
  subtitle    String?  // <--- NUEVO: La bajada o copete
  author      String?  // <--- NUEVO: El autor (ej: JosÃ© Scheifler)
  content     String
  category    String?
  source      String?
  imageUrl    String?
  externalUrl String?
  createdAt   DateTime @default(now())
}